# Production Environment Variables
NODE_ENV=production
PORT=5000

# Database (Replace with your MongoDB Atlas URL)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/absolute-tms?retryWrites=true&w=majority

# JWT Settings
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-change-this-in-production

# CORS Settings (Replace with your domain)
CORS_ORIGIN=https://your-domain.com

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./public/uploads

# API Settings
API_VERSION=v1
API_RATE_LIMIT=100

# Email Settings (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Session Settings
SESSION_SECRET=your-session-secret-key-change-this-in-production